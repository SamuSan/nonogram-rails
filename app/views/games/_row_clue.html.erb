<% row_clue = @rows[row].clue %>
<% clue_length = max_clue_length(rows: @rows, columns: @columns) %>

<% clue_length.times do |clue_number| %>
  <% if row_clue.length == clue_length - clue_number %>
    <%= content_tag :th, " #{row_clue.shift}", class: 'cell row-clue' %>
  <% else %>
    <%= content_tag(:th, '', class: 'cell row-clue') %>
  <% end %>
<% end %>