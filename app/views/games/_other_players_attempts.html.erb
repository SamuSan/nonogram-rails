<% if waiting_for_results %>
  <%= content_tag(:template, '', id: 'waiting-for-results') %>
<% end %>

<%= content_tag(:h4, "Other player's attempts for this game:") %>

<% player_grids.each do |player_name, grid| %>
  <%= content_tag(:h5, player_name) %>

  <% if grid.present? %>
    <%= render partial: 'nonograms/display', locals: {nonogram: grid, size: size, draw_clues: false} %>
  <% elsif waiting_for_results %>
    <%= content_tag(:span, 'waiting for answer...') %>
  <% else %>
    <%= content_tag(:span, 'did not finish') %>
  <% end %>
<% end %>