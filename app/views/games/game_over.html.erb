<template id="game" data-game-id="<%= @game.id %>"></template>
<template id="game-over"></template>

<%= content_tag :h2, @game.nonogram.hint %>
<%= content_tag :h1, @game.nonogram.name %>

<% if @solution.present? %>
  <%= render partial: 'nonograms/display', locals: {nonogram: @solution, size: @size, draw_clues: false} %>
<% end %>

<h4><%= game_finished_message(@game) %></h4>

<%= render 'top_players' %>

<%= content_tag(:div, '', id: 'other-players-attempts') %>

<%= render 'back_to_index' %>