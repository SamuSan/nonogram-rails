<div class="navbar"> 

  <div class="title">n o n o g r a m s</div>

  <div class="login-details">
    <% if user_signed_in? %>

      <div class="name">Logged in as <strong><%= current_user.name %></strong></div>
        
      <div class="options">
        <ul><%= link_to 'Edit profile', edit_user_registration_path, :class => 'link' %></ul>
        <ul><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'link'  %></ul>
      </div>
    <% else %>

      <%= link_to "Sign up", new_user_registration_path, :class => 'link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'link'  %>
    <% end %>
  </div>
</div>